{
  "description": "Application d'administration du noeud RUDI",
  "name": "rudi-prodmanager-back",
  "version": "2.3.1",
  "author": "Yann Porret <yporret@micropole.com>, Olivier Martineau <olivier.martineau@irisa.fr>",
  "license": "EUPL-1.2",
  "private": true,
  "main": "server.js",
  "scripts": {
    "prestart": "npm install",
    "test": "jest --config ./jest.config.json --coverage",
    "testCI": "jest --ci --reporters=default --reporters=jest-junit",
    "front": "cd front && npm start",
    "start": "nodemon      server.js --hash $(git rev-parse --short HEAD) --tag dev0 --conf .env/prodmanager-conf-custom.ini --node_env development --db ./db/manager.db --ignore \"**/(front)/\"",
    "start:stg": "nodemon  server.js --hash $(git rev-parse --short HEAD) --tag dev0 --conf=.env/prodmanager-conf-custom.ini --node_env staging     --ignore \"**/(front)/\"",
    "start:prod": "nodemon server.js --hash $(git rev-parse --short HEAD) --tag dev0 --conf=.env/prodmanager-conf-custom.ini --node_env production  --ignore \"**/(front)/\"",
    "start:prod:win": "Set NODE_ENV=production&node server",
    "server:win": "nodemon server.js --ignore './(front|console)/*' --exec \"Set RUDI_PROD_MANAGER_GIT_REV=git rev-parse --short HEAD& node\"",
    "server:linux": "nodemon server.js --ignore './(front|console)/*' --exec \"export RUDI_PROD_MANAGER_GIT_REV=$(git rev-parse --short HEAD) ; node \"",
    "front-build": "cd front && npm run build:prod",
    "lintBack": "eslint \"**/*.js\"",
    "lintFront": "eslint ./front/src/**/*.js -c front/.eslintrc --no-ignore",
    "prettify": "npx prettier --write .",
    "quality": "npm run prettier && npm run lintBack -- --fix",
    "stats": "find . -name \"node_modules\" -type d -prune | xargs du -chs",
    "cleanup": "rm -fR ./node_modules &; rm -fR ./front/node_modules &; rm -fR **/package-lock.json 2> /dev/null; rm -fR **/yarn.lock 2> /dev/null"
  },
  "dependencies": {
    "@aqmo.org/jwt-lib": "^1.1.12",
    "@aqmo.org/rudi_logger": "^1.1.6",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "crypto-js": "^4.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "ini": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "leaflet-draw": "^1.0.4",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.4",
    "braces": "^3.0.3",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "jest-express": "^1.12.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3"
  },
  "overrides": {
    "braces": "$braces",
    "postcss": "$postcss"
  }
}
